#include <AlfredLogger.mqh>

AlfredLogger logger;
input bool logToFile = true;

int OnInit()
{
   Print("游리 OnInit started");

   if(logToFile)
   {
      Print("游릭 Logger init starting");
      logger.Init();
      Print("游릭 Logger init complete");

      logger.LogEvent(
         TimeCurrent(),
         _Symbol,
         PERIOD_CURRENT,
         "InitLog",
         100.0,
         SymbolInfoDouble(_Symbol, SYMBOL_ASK)
      );
      Print("游릭 LogEvent fired");
   }

   return INIT_SUCCEEDED;
}

void OnTick() {}
